  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Node CNAB Mocha Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "-r",
        "ts-node/register",
        "${workspaceFolder}/test/*.ts"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "cwd": "${workspaceFolder}"
    }
  ]
}